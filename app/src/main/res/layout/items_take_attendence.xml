            <!--android:layout_marginLeft="5dp"-->
            <!--android:translationX="10dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->

        <!--</android.support.v7.widget.AppCompatSpinner>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>